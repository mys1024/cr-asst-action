{
  "name": "cr-asst-action",
  "type": "module",
  "version": "2.1.0-beta.2",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "description": "An action powered by cr-asst that reviews your pull requests with AI assistants.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst-action#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst-action.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "rm -rf dist && rolldown -c rolldown.config.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cover": "vitest run --coverage",
    "check": "run-p check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "release": "bumpp"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "cr-asst": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "bump": "^0.2.5",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.1",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rolldown": "^1.0.0-beta.24",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test && pnpm check:type && pnpm lint-staged && pnpm build && git add dist"
  },
  "lint-staged": {
    "*": [
      "eslint --fix .",
      "prettier --write ."
    ]
  }
}
