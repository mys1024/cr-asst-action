{
  "name": "cr-asst-action",
  "type": "module",
  "version": "0.9.0",
  "private": true,
  "packageManager": "pnpm@10.6.1",
  "description": "An action powered by cr-asst that reviews your pull requests with AI assistants.",
  "author": "mys1024",
  "license": "MIT",
  "homepage": "https://github.com/mys1024/cr-asst-action#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mys1024/cr-asst-action.git"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "unbuild",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cover": "vitest run --coverage",
    "check": "run-p check:*",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "taze": "taze -I",
    "release": "bumpp"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.9",
    "@vitest/coverage-v8": "^3.0.8",
    "bump": "^0.2.5",
    "bumpp": "^10.0.3",
    "cr-asst": "^0.12.2",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "unbuild": "^3.5.0",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test && pnpm check:type && pnpm lint-staged && pnpm build && git add dist"
  },
  "lint-staged": {
    "*": [
      "eslint --fix .",
      "prettier --write ."
    ]
  }
}
